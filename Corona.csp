	.EQU @, $000
	.EQU KEYBOARD_STATUS, $000
	.EQU KEYBOARD_DATA, $001
WORD:	.CHAR'get pwned'
CHAR_DUMP:	.CHAR

	LDX# 0
POLL_KEYB:	INB KEYBOARD_STATUS
	JGE POLL_KEYB
	INB KEYBOARD_DATA
	STA+ $D00
	NOP
	CMA# 'd'
	JEQ ERASE
	ADX# 1
	JMP POLL_KEYB

ERASE:	TXA
	STA $040
	LDX# $FFF

CHECK:	INC $041
	AOC# 9
	JGE FINISH
	LDC WORD
	CMA* $041
	JEQ CHECK
	INC $040
	LDX $040
	JMP POLL_KEYB

FINISH:	LDA $041
	LDX# 0

FINISH_LOOP:	MUL# $040
	STA+ $000
	ADX# 1
	CMX# 26
	JLE FINISH_LOOP

	HLT
